@model IEnumerable<DomaciM3T2.Models.Festival>

@{
    ViewData["Title"] = "Index";
}

<h1>Festivali</h1>
<div style="display: flex; justify-content: space-around;">
    <div>
        <h3>Sortiranje podataka</h3>
        @using (Html.BeginForm("Index", "Festivals", FormMethod.Get))
        {
            @Html.DropDownList("sortiranje", ViewBag.NaciniSortiranja as SelectList, new { @class = "form-control" })
            <input type="submit" class="btn btn-primary form-control" value="Sortiraj" />
        }
    </div>
    <div>
        <h3>Filtriranje podataka</h3>
        @using (Html.BeginForm("Index", "Festivals", FormMethod.Get))
        {
            @Html.Label("Naziv")
            @Html.TextBox("Naziv", null, new { @class = "form-control" })
            @Html.Label("Mesto")
            @Html.TextBox("Mesto", null, new { @class = "form-control" })
            @Html.Label("Ocena veca od")
            @Html.TextBox("Ocena", null, new { type = "Number", step = 0.1, @class = "form-control" })
            @Html.Label("Datum od")
            @Html.TextBox("DatumOd", null, new { type = "Date", @class = "form-control" })
            @Html.Label("Datum do")
            @Html.TextBox("DatumDo", null, new { type = "Date", @class = "form-control" })

            @Html.Hidden("sortiranje")
            <input type="submit" value="Filtriraj" class="btn btn-primary" />
        }
    </div>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mesto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumOdrzavanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ocena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaksimumPosetilaca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumOdrzavanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ocena)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaksimumPosetilaca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
